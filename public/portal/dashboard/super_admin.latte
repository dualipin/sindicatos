<div class="row row-cols-1 row-cols-md-4 g-4 mb-4">
    <div class="col">
        <div class="card h-100 border-primary shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-primary"><i class="bi bi-cash-stack"></i> Cartera Activa</h5>
                <p class="h3 my-3">${$metrics['cartera_activa']|number:2}</p>
                <small class="text-muted">Total préstamos activos</small>
            </div>
        </div>
    </div>
    <div class="col">
         <div class="card h-100 border-success shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-success"><i class="bi bi-graph-up-arrow"></i> Recuperación</h5>
                <p class="h3 my-3">{$metrics['recuperacion']|number:0}%</p>
                <small class="text-muted">Porcentaje quincenal proyectado</small>
            </div>
        </div>
    </div>
     <div class="col">
        <div class="card h-100 border-warning shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-warning"><i class="bi bi-people"></i> Usuarios Activos</h5>
                <p class="h3 my-3">{$metrics['usuarios_activos']}</p>
                <small class="text-muted">En plataforma</small>
            </div>
        </div>
    </div>
    <div class="col">
         <div class="card h-100 border-danger shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-danger"><i class="bi bi-exclamation-triangle"></i> Alertas</h5>
                <p class="h3 my-3">0</p>
                <small class="text-muted">Configuraciones pendientes</small>
            </div>
        </div>
    </div>
</div>

<div class="row">
